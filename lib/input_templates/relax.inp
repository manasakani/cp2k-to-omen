&GLOBAL
  PROJECT transport
  RUN_TYPE CELL_OPT
  PRINT_LEVEL MEDIUM
  WALLTIME  85000
  EXTENDED_FFT_LENGTHS TRUE
&END GLOBAL
&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  &SUBSYS
     &KIND Ti
        BASIS_SET  SZV-MOLOPT-SR-GTH
 	POTENTIAL  GTH-PBE-q12
    &END KIND
    &KIND N
    	BASIS_SET  SZV-MOLOPT-SR-GTH
        POTENTIAL  GTH-PBE-q5
    &END KIND
     &KIND Hf
        BASIS_SET SZV-MOLOPT-SR-GTH
        POTENTIAL GTH-PBE-q12
    &END KIND
    &KIND O
         BASIS_SET SZV-MOLOPT-SR-GTH
         POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND V
      BASIS_SET  SZV-MOLOPT-SR-GTH
      ELEMENT O
      POTENTIAL GTH-PBE-q6
      GHOST
    &END KIND
    &CELL
      ABC 59.276 16.112 16.006
      SYMMETRY ORTHORHOMBIC
    &END CELL
 &TOPOLOGY
     COORD_FILE_FORMAT XYZ
     COORD_FILE_NAME structure.xyz
 &END TOPOLOGY
&END SUBSYS
&DFT
    BASIS_SET_FILE_NAME /scratch/snx3000/mkanisel/CP2K_BasisSets/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /scratch/snx3000/mkanisel/CP2K_BasisSets/POTENTIALS
!   WFN_RESTART_FILE_NAME transport-RESTART.wfn
   &QS
      EPS_DEFAULT 1.0E-12
    &END QS
!   &KPOINTS
!   SCHEME GAMMA
!   SYMMETRY OFF
!   &END KPOINTS
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
#     &KS_CSR_WRITE
#       THRESHOLD 1e-7
#       UPPER_TRIANGULAR
#     &END KS_CSR_WRITE
#     &S_CSR_WRITE
#       THRESHOLD 1e-7
#       UPPER_TRIANGULAR
#     &END S_CSR_WRITE
#     &ENERGY_WINDOWS
#       RESTRICT_RANGE
#       RANGE 0.2
#        N_WINDOWS 1   # for faster output
#       N_WINDOWS 200
#     &END ENERGY_WINDOWS
      &END PRINT
      &MGRID
      NGRIDS 5
      CUTOFF 500
      REL_CUTOFF 60
    &END MGRID
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-08
      MAX_SCF 1000
    &DIAGONALIZATION T
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      ADDED_MOS 1000
      &MIXING  T
        METHOD BROYDEN_MIXING
        ALPHA 0.1
        NBROYDEN 20
      &END MIXING
     &PRINT
        &RESTART ON
        &END RESTART
      &END PRINT
     &SMEAR ON
     METHOD FERMI_DIRAC
     ELECTRONIC_TEMPERATURE 300
     &END SMEAR
    &END SCF
&END DFT
&END FORCE_EVAL
&MOTION
  &GEO_OPT
    TYPE MINIMIZATION
    MAX_DR    1.0E-03
    MAX_FORCE 1.0E-03
    RMS_DR    1.0E-03
    RMS_FORCE 1.0E-03
    MAX_ITER 500
    OPTIMIZER CG
    &CG
      MAX_STEEP_STEPS  0
      RESTART_LIMIT 9.0E-01
    &END CG
  &END GEO_OPT
  &CELL_OPT
   KEEP_ANGLES
   MAX_ITER 500
  &END
  &PRINT
  &TRAJECTORY
      &EACH
        GEO_OPT 1
        CELL_OPT 1
      &END EACH
  &END TRAJECTORY
  &RESTART
      BACKUP_COPIES 1
  &END RESTART
&END PRINT
# &CONSTRAINT
# &FIXED_ATOMS
# LIST 1..224
# LIST 2442..2665
# &END FIXED_ATOMS
# &END CONSTRAINT
&END MOTION
